<div class="form-row">
    <div class="form-item">
        <label for="title"><b>Title</b></label>
        <input type="text" name="title" value="{{title}}" required>
    </div>
    <div class="form-item">
        <label for="author"><b>Author</b></label>
        <select name="author">
        {{#each authors}}
            <option value="{{author_id}}">{{author_name}}</option>
        {{/each}}
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publish_date"><b>Publish Date</b></label>
        <input type="date" name="publish_date" value="{{publish_date}}" required>
    </div>
    <div class="form-item">
        <label for="page_count"><b>Page Count</b></label>
        <input type="number" name="page_count" min="1" value="{{page_count}}" required>
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover"><b>Cover</b></label>
        <input type="file" name="cover" required>
    </div>

    <div class="form-item">
        <label for="description"><b>Description</b></label>
        <textarea name="description" placeholder="Drag to adjust field size" required>{{description}}</textarea>
    </div>
</div>
