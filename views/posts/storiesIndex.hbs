{{> header}}

<div class="inner-container">
    <h2 class="page-header">Search Short Stories</h2>
    <form action="/posts/stories" method="GET">
        <div class="form-row">
            <div class="form-item">
                <input type="text" name="search">
            </div>
        </div>

        <div class="form-row form-row-end">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
    <br>
    {{#each results}}
        {{> bookGrid}}
    {{/each}}
</div>