<!-- Login Form -->
<form class="indexFormcls" action="/auth" method="POST">
    <img src="images/undraw_typewriter.svg" alt="Avatar" class="avatar">
    <div id="appTitle">the Reposi-story</div>
    <div class="error" id="error">{{error}}</div>

    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" id="uname" class="txtform" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" id="psw" class="txtform" required>

        <button type="submit" name="submit" id="loginbtn" class="indexButtons">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
        <span class="psw">Forgot <a href="#">password?</a></span>
        <p id="signup" onclick="document.getElementById('id01').style.display='block'">
            Don't have an account? <u>Sign Up Here</u></p>
    </div>
</form>

<!-- The Modal (contains the Sign Up form) -->
<div id="id01" class="modal">

    <form class="modal-content" onsubmit="return validate()" action="/signUp" method="POST">
        <div class="container">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <p style="color: red">{{messages.info}}</p>
            <label for="fullname"><b>Full name</b></label><span class="signuperror">Invalid name</span>
            <input type="text" placeholder="Full name" name="fullname" id="fullname" class="txtform" required>

            <label for="username"><b>Username</b></label><span class="signuperror">Username too short</span>
            <input type="text" placeholder="Username" name="username" id="username" class="txtform" required>

            <label for="email"><b>Email</b></label><span class="signuperror">Invalid email</span>
            <input type="text" placeholder="Enter Email" name="email" id="email" class="txtform" required>

            <label for="password"><b>Password</b></label><span class="signuperror">Password too short</span>
            <input type="password" placeholder="Enter Password" name="password" id="password" class="txtform" required>

            <label for="psw-repeat"><b>Repeat Password</b></label><span class="signuperror">Passwords don't match</span>
            <input type="password" placeholder="Repeat Password" name="pswrepeat" id="psw-repeat" class="txtform" required>

            <label>
                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>

            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                <button type="submit" class="indexButtons">Sign Up</button>
            </div>
        </div>
    </form>
</div>
<!-- End of modal -->

<script type="text/javascript" src="javascripts/script.js"></script>
