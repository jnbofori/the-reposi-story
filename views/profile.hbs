{{> header}}

<div class="inner-container">
    {{err}}
    {{#each user}}
        <h2 class="page-header">{{fullname}}</h2>
        <h3>{{username}}</h3>
        <h3>{{bio}}</h3>
        <div class="btn-row">
            <a class="btn btn-primary" href="/writers/{{user_id}}/edit">Edit</a>
            <form method="POST" action="/writers/{{user_id}}?_method=DELETE">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            <a class="btn btn-primary" href="/writers/{{user_id}}/account">Update Details</a>
        </div>
    {{/each}}

    {{#if books}}
        <h2>Books by Author</h2>
        {{> bookGrid}}
    {{/if}}
</div>


